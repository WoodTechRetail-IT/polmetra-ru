<div class="captcha basic-captcha">
  <h3>{{ text_captcha }}</h3>
  <div class="form-group required flex flex-wrap-media">
    {% if route|slice(0, 9) == 'checkout/' %}
    <label class="control-label form-label" for="input-payment-captcha">{{ entry_captcha }}</label>
    <div class="form-input">
	  <input type="text" name="captcha" id="input-payment-captcha" class="form-control" autocomplete="off" />
      <img src="index.php?route=extension/captcha/basic/captcha" alt="" />
    </div>
	{% else %}
    <label class="col-sm-2 control-label form-label" for="input-captcha">{{ entry_captcha }}</label>
    <div class="form-input">
      <input type="text" name="captcha" id="input-captcha" class="form-control" />
      <img src="index.php?route=extension/captcha/basic/captcha" alt="" />
      {% if error_captcha %}
      <div class="text-danger">{{ error_captcha }}</div>
      {% endif %}
    </div>
    {% endif %}
  </div>
</div>
