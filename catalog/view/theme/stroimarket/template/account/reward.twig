{{ header }}
<div id="account-reward">
  <div class="bg-container">
    <div class="container">
      <div class="navigation-content">
        <ul class="breadcrumb">
          {% for i,breadcrumb in breadcrumbs %} 
          {% if (i+1<breadcrumbs|length) %}
          <li><a href="{{ breadcrumb.href }}">{{ breadcrumb.text }}</a></li>
          {% else %}
          <li>{{ breadcrumb.text }}</li>
          {% endif %} 
          {% endfor %}	
        </ul>
      </div>
    </div>
  </div>
  <div class="container">
    <div class="content-wrapper">
      <div class="row">
        {{ column_left }}
        {% if column_left and column_right %}
        {% set class = 'col-sm-6' %}
        {% elseif column_left or column_right %}
        {% set class = 'col-sm-9' %}
        {% else %}
        {% set class = 'col-sm-12' %}
        {% endif %}
        <div id="content" class="{{ class }}">
          {{ content_top }}
          <h1>{{ heading_title }}</h1>
          <div class="reward-info">
            <div class="form-group">
              <div class="rewad-info__block">
                <div class="reward-text__total">{{ text_total }}</div>
                <div class="reward-total">{{ total }}</div>
              </div>
            </div>
          </div>
          <div class="reward-table">
            <table class="table">
              <thead>
                <tr>
                  <th class="text-left">{{ column_date_added }}</th>
                  <th class="text-left">{{ column_description }}</th>
                  <th class="text-right">{{ column_points }}</th>
                </tr>
              </thead>
              <tbody>
                {% if rewards %}
                {% for reward in rewards %}
                <tr>
                  <td class="text-left">{{ reward.date_added }}</td>
                  <td class="text-left">
                    {% if reward.order_id %}
                    <a href="{{ reward.href }}">{{ reward.description }}</a>
                    {% else %}
                    {{ reward.description }}
                    {% endif %}
                  </td>
                  <td class="text-right text-success reward-sum">+&nbsp;{{ reward.points }}</td>
                </tr>
                {% endfor %}
                {% else %}
                <tr>
                  <td class="text-center" colspan="3">{{ text_empty }}</td>
                </tr>
                {% endif %}
              </tbody>
            </table>
          </div>
          <div class="pagination">
            <div class="text-left">{{ pagination }}</div>
          </div>
          <div class="buttons clearfix">
            <div class="pull-right"><a href="{{ continue }}" class="btn btn-primary">{{ button_continue }}</a></div>
          </div>
          {{ content_bottom }}
        </div>
        {{ column_right }}
      </div>
    </div>
  </div>
</div>
{{ footer }}