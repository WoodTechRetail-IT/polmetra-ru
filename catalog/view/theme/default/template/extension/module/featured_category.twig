{% if heading_title %}
<div class="text-title">
  {% if shadow_title %}
  <div class="shadow-title">{{ text_shadow_title }}</div>
  {% endif %}
  <div class="title-content">{{ heading_title }}</div>
</div>
{% endif %}
<div class="ftr-module">
  <div class="row">
    {% for category in categories %}
    <div class="col-lg-2 col-md-3 col-sm-4 col-xs-6">
      <div class="ftr-cat ftr-cat__main">
        <a href="{{ category.href }}"><img src="{{ category.thumb }}" alt="{{ category.name }}" title="{{ category.name }}"></a>
	    <span class="ftr-cat__name">{{ category.name }}</span>
      </div>
    </div>
    {% endfor %}
  </div>
</div>