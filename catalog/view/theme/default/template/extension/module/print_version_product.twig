<!DOCTYPE html>
<html dir="{{ direction }}" lang="{{ lang }}">
<head>
<meta charset="utf-8" />
<title>{{ heading_title }}</title>
<meta name="robots" content="noindex,nofollow">
<link href="{{ href }}" rel="canonical">
<base href="{{ base }}" />
<script src="catalog/view/javascript/jquery/jquery-2.1.1.min.js"></script>
<link href="catalog/view/javascript/bootstrap/css/bootstrap.min.css" rel="stylesheet" media="all" />
<script src="catalog/view/javascript/bootstrap/js/bootstrap.min.js"></script>
<link href="catalog/view/javascript/font-awesome/css/font-awesome.min.css" rel="stylesheet" type="text/css" />
<style>ul{list-style-type: none;}</style>
</head>
<body>
<div class="container">
    <div id="content">
		<div class="row" style="margin-top:20px;">
			<div class="col-xs-8">
				<h3>{{ store }}</h3>
				<p>{{ address }}<br>
				{{ entry_email }}:  {{ email }}<br>
				{{ text_telephone }}:  {{ telephone }}
				{% if fax %}
				<br>{{ text_fax }}: {{ fax }}
				{% endif %}
				<br><strong>{{ store_domain }}</strong>
				</p>
			</div>
			<div class="col-xs-4">
				{% if logo %}
				<img src="{{ logo }}" alt="{{ store }}"  class="img-responsive" style=""/>
				{% endif %}
			</div>
		  </div>
		  <hr>
		<h1>{{ heading_title }}</h1>
		<p>{{ href }}</p>
		<hr>
		<div class="row">
		<div class="col-xs-6">
		  {% if image %}
			<img src="{{ image }}" title="{{ heading_title }}" alt="{{ heading_title }}" class="img-responsive" />
		  {% endif %}
		</div>
        <div class="col-xs-6">
			<img src="//chart.apis.google.com/chart?chs=160x160&cht=qr&chld=L&chl={{ href }}" alt="Product QR Code" style="float:right">
          <ul class="list-unstyled">
			{% if sku %}
            <li>{{ text_sku }} {{ sku }}</li>
            {% endif %}
			{% if manufacturer %}
            <li>{{ text_manufacturer }} {{ manufacturer }}</li>
            {% endif %}
            <li>{{ text_model }} {{ model }}</li>
			{% if reward %}
            <li>{{ text_reward }} {{ reward }}</li>
            {% endif %}
            <li>{{ text_stock }} {{ stock }}</li>
          </ul>
		  {% if price %}
          <ul class="list-unstyled">
            {% if not special %}
            <li>
              <h2>{{ price }}</h2>
            </li>
            {% else %}
            <li><span style="text-decoration: line-through;">{{ price }}</span></li>
            <li>
              <h2>{{ special }}</h2>
            </li>
            {% endif %}
            {% if tax %}
			<li>{{ text_tax }} {{ tax }}</li>
            {% endif %}
            {% if points %}
            <li>{{ text_points }} {{ points }}</li>
            {% endif %}
            {% if discounts %}
            <li>
              <hr>
            </li>
            {% for discount in discounts %}
            <li>{{ discount.quantity }}{{ text_discount }}{{ discount.price }}</li>
            {% endfor %}
            {% endif %}
          </ul>
          {% endif %}
          <div id="product">
            {% if options %}
            <hr>
            <h3>{{ text_option }}</h3>
            <ul>
				{% for option in options %}
				{% if option.type == 'select' %}
				<li>{% if option.required %}*{% endif %} {{ option.name }}
					<ul>
						{% for option_value in option.product_option_value %}
						<li>{% if option_value.image %} <img src="{{ option_value.image }}" alt="{{ option_value.name }} {% if option_value.price %} {{ option_value.price_prefix }} {{ option_value.price }} {% endif %}" class="img-thumbnail" /> {% endif %}
							{{ option_value.name }}
							{% if option_value.price %}
							({{ option_value.price_prefix }}{{ option_value.price }})
							{% endif %}
						</li>
						{% endfor %}
					</ul>
				</li>
				{% endif %}
				{% if option.type == 'radio' %}
				<li>{% if option.required %}*{% endif %} {{ option.name }}
					<ul>
						{% for option_value in option.product_option_value %}
						<li>{% if option_value.image %} <img src="{{ option_value.image }}" alt="{{ option_value.name }} {% if option_value.price %} {{ option_value.price_prefix }} {{ option_value.price }} {% endif %}" class="img-thumbnail" /> {% endif %}
							{{ option_value.name }}
							{% if option_value.price %}
							({{ option_value.price_prefix }}{{ option_value.price }})
							{% endif %}
						</li>
						{% endfor %}
					</ul>
				</li>
				{% endif %}
				{% if option.type == 'checkbox' %}
				<li>{% if option.required %}*{% endif %} {{ option.name }}
					<ul>
						{% for option_value in option.product_option_value %}
						<li>{% if option_value.image %} <img src="{{ option_value.image }}" alt="{{ option_value.name }} {% if option_value.price %} {{ option_value.price_prefix }} {{ option_value.price }} {% endif %}" class="img-thumbnail" /> {% endif %}
							{{ option_value.name }}
							{% if option_value.price %}
							({{ option_value.price_prefix }}{{ option_value.price }})
							{% endif %}
						</li>
						{% endfor %}
					</ul>
				</li>
				{% endif %}
				{% if option.type == 'text' %}
				<li>{% if option.required %}*{% endif %} {{ option.name }} <i class="fa fa-pencil"></i></li>
				{% endif %}
				{% if option.type == 'textarea' %}
				<li>{% if option.required %}*{% endif %} {{ option.name }} <i class="fa fa-pencil"></i></li>
				{% endif %}
				{% if option.type == 'file' %}
				<li>{% if option.required %}*{% endif %} {{ option.name }} <i class="fa fa-upload"> {{ button_upload }}</i></li>
				{% endif %}
				{% if option.type == 'date' %}
				<li>{% if option.required %}*{% endif %} {{ option.name }} <i class="fa fa-calendar"></i></li>
				{% endif %}
				{% if option.type == 'datetime' %}
				<li>{% if option.required %}*{% endif %} {{ option.name }} <i class="fa fa-calendar"></i></li>
				{% endif %}
				{% if option.type == 'time' %}
				<li>{% if option.required %}*{% endif %} {{ option.name }} <i class="fa fa-calendar"></i></li>
				{% endif %}
				{% endfor %}
			</ul>
            {% endif %}
            {% if recurrings %}
            <hr>
            <h3>{{ text_payment_recurring }}</h3>
            <div class="form-group required">
              <select name="recurring_id" class="form-control">
                <option value="">{{ text_select }}</option>
                {% for recurring in recurrings %}
                <option value="{{ recurring.recurring_id }}">{{ recurring.name }}</option>
                {% endfor %}
              </select>
              <div class="help-block" id="recurring-description"></div>
            </div>
            {% endif %}
            {% if minimum > 1 %}
            <div class="alert alert-info"><i class="fa fa-info-circle"></i> {{ text_minimum }}</div>
            {% endif %}
          </div>
          {% if review_status %}
          <div class="rating">
            <p>
              <p>{% for i in 1..5 %}
              {% if rating < i %}<span class="fa fa-stack"><i class="fa fa-star-o fa-stack-1x"></i></span>{% else %}<span class="fa fa-stack"><i class="fa fa-star fa-stack-1x"></i><i class="fa fa-star-o fa-stack-1x"></i></span>{% endif %}
              {% endfor %}
			  {{ tab_review }}
			</p>
          </div>
          {% endif %}
        </div>
      </div>
      </div>
	  <div class="tab-content">
		<div id="tab-description"><h2>{{ tab_description }}</h2>{{ description }}</div>
		{% if attribute_groups %}
		<div id="tab-specification">
		  <h2>{{ tab_attribute }}</h2>
		  <table class="table table-bordered">
			{% for attribute_group in attribute_groups %}
			<thead>
			  <tr>
				<td colspan="2"><strong>{{ attribute_group.name }}</strong></td>
			  </tr>
			</thead>
			<tbody>
			  {% for attribute in attribute_group.attribute %}
			  <tr>
				<td>{{ attribute.name }}</td>
                <td>{{ attribute.text }}</td>
			  </tr>
			  {% endfor %}
			</tbody>
			{% endfor %}
		  </table>
		</div>
		{% endif %}
	  </div>
	   {% if products %}
		<div id="tab-related">
			<h3>{{ text_related }}</h3>
			<table class="table table-bordered">
			{% for product in products %}
				<tr>
					<td>{{ product.name }}</td>
					<td>{% if not product.special %}{{ product.price }}{% else %} <span class="price-new">{{ product.special }}</span> <span class="price-old">{{ product.price }}</span> {% endif %}</td>
				</tr>
			{% endfor %}
			</table>
		</div>
		{% endif %}
	 </div>
</div><!--container-->
</body>
</html>
