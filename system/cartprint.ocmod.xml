<file path="catalog/language/en-gb/common/cart.php">
	<operation error="skip">
	<search><![CDATA[<?php]]></search>
	<add position="after">
	<![CDATA[
	$_['text_print'] = 'Print offer';
	]]></add>
	</operation>
</file>
<file path="catalog/language/ru-ru/common/cart.php">
	<operation error="skip">
	<search><![CDATA[<?php]]></search>
	<add position="after">
	<![CDATA[
	$_['text_print'] = 'Распечатать';
	]]></add>
	</operation>
</file>
<file path="catalog/language/uk-ua/common/cart.php">
	<operation error="skip">
	<search><![CDATA[<?php]]></search>
	<add position="after">
	<![CDATA[
	$_['text_print'] = 'Роздрукувати';
	]]></add>
	</operation>
</file>
<file path="catalog/view/theme/*/template/common/cart.twig">
	<operation error="skip">
	<search><![CDATA[<p class="text-right"><a href="{{ cart }}"><strong><i class="fa fa-shopping-cart"></i> {{ text_cart }}</strong></a>&nbsp;&nbsp;&nbsp;<a href="{{ checkout }}"><strong><i class="fa fa-share"></i> {{ text_checkout }}</strong></a></p>]]></search>
	<add position="after">
	<![CDATA[
	<a href="index.php?route=checkout/cartprint" target="_blank" class="btn btn-primary btn-block"><i class="fa fa-print"></i> {{ text_print }}</a>
	]]></add>
	</operation>
</file>

</modification>