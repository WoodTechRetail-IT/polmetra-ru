						<ul class="nav nav-pills nav-stacked" id="mrptab">
							{% set mrp_row = 1 %} 
							{% for category_mrp in category_mrps %} 
								<li><a href="#tab-mrptab{{ mrp_row }}" data-toggle="tab"><i class="fa fa-minus-circle" onclick="$('a[href=\'#tab-mrptab{{ mrp_row }}\']').parent().remove(); $('#tab-mrptab{{ mrp_row }}').remove(); $('#mrptab a:first').tab('show');"></i> {{ entry_group ~ ' ' ~ mrp_row }}</a></li>
