														<textarea name="category_mrp[{{ mrp_row }}][category_mrp_description][{{ language['language_id'] }}][description]" placeholder="{{ entry_description }}" id="input-description{{ mrp_row }}-language{{ language['language_id'] }}" data-toggle="summernote" data-lang="{{ summernote }}"  class="form-control">{{ category_mrp['category_mrp_description'][language['language_id']] is defined ? category_mrp['category_mrp_description'][language['language_id']]['description'] : '' }}</textarea>
